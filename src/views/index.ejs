<!DOCTYPE html>
<html>
  <%- include('./partials/head')  %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav')  %> 

    <!-- Header -->
    <%- include('./partials/header')  %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/principal.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"> <%= titulo %>  </h1>
          <br />
          <p class="ps-large">
            <%= description1About %>  We only use
            <span class="ps-tag ps-light-grey">seasonal</span> ingredients.
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= description2About %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <% platos.forEach(plato => { %>
            <h4> <a href="/detail/<%= plato.id %> "> <%= plato.title %>  </a> </h4>
          <% if (plato.description) { %> 
            <p class="ps-text-grey"><%= plato.description %> U$S <%= plato.price %> 
            </p>
          <% }else{ %>  
            <p class="ps-text-grey"><%= "Plato tÃ­pico" %> U$S <%= plato.price %> 
            </p>
          <% } %>
            <br />
          <% }) %>
        </div>
        
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/header')  %> 
    </div>
  </body>
</html>
